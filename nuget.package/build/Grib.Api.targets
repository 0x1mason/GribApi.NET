<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <ItemGroup>
        <None Include="$(MSBuildThisFileDirectory)$(Platform)\Grib.Api.Native.dll">
            <Link>Grib.Api\lib\win\$(Platform)\Grib.Api.Native.dll</Link>
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
		<None Include="$(MSBuildThisFileDirectory)$(Platform)\Grib.Api.Native.pdb">
            <Link>Grib.Api\lib\win\$(Platform)\Grib.Api.Native.pdb</Link>
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
    </ItemGroup>
	<Target Name="AfterBuild">
		<ItemGroup>
			<_Definitions Include="$(MSBuildThisFileDirectory)..\definitions\**\*.*" />
		</ItemGroup>
		<Copy SourceFiles="@(_Definitions)" 
		  DestinationFiles="@(_Definitions->'$(TargetPath)Grib.Api\definitions\%(RecursiveDir)%(Filename)%(Extension)')"
		  UseHardlinksIfPossible="true" 
		  SkipUnchangedFiles="true" />
	</Target>
</Project>